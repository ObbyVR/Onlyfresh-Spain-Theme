                {
                    "type": "color",
                    "id": "heading_color",
                    "label": "Color"
                },
            {
                "type": "header",
                "content": "Form"
            },
                {
                    "type": "checkbox",
                    "id": "policy",
                    "label": "Enable Policy",
                    "default": true
                },
                {
                    "type": "richtext",
                    "id": "description_text",
                    "label": "DescripciÃ³n"
                },
                {
                    "type": "richtext",
                    "id": "policy_content",
                    "label": "Policy"
                },
                {
                    "type": "checkbox",
                    "id": "store_information",
                    "label": "Enable Store Information",
                    "default": true
                },
                {
                    "type": "richtext",
                    "id": "store_information_title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "store_information_telephone",
                    "label": "Telephone"
                },
                {
                    "type": "richtext",
                    "id": "store_information_email",
                    "label": "Email"
                },
                {
                    "type": "select",
                    "id": "store_information_viewpoint",
                    "options": [
                        {
                            "value": "desktop",
                            "label": "Desktop"
                        },
                        {
                            "value": "mobile",
                            "label": "Mobile"
                        },
                        {
                            "value": "both",
                            "label": "Both Screen"
                        }
                    ],
                    "default": "mobile",
                    "label": "Viewpoint"
                },
            {
                "type": "header",
                "content": "Media"
            },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "image_mobile",
                    "label": "Image mobile"
                },
            {
                "type": "header",
