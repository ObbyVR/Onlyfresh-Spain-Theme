<div class="subscribe-block">
<div class="subscribe-block__heading">
    {{ 'general.subscription_block.heading' | t }}
</div>
  {% form 'customer', class: 'subscribe-form' %}
    {% if form.posted_successfully? %}
      <div class="viscata-rocket-subscribe-email__response viscata-rocket-subscribe-email__response--success">
        <div>{{ 'newsletter.success' | t }}</div>
      </div>
    {% else %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="subscribe-block__form-wrapper">
        <div class="subscribe-block__type subscribe-block__field">
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="subscribe-block-field__input"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            placeholder="{{ 'general.subscription_block.email' | t }}"
            required
          >
          <label class="field__label hidden" for="NewsletterForm--{{ section.id }}">
            {{ 'newsletter.label' | t }}
          </label>
        </div>
        <div class="subscribe-block__type subscribe-block__radio">
          <span class="subscribe-block__type--title">
              {{ 'general.subscription_block.title_radio' | t }}
          </span>
          <div>
            <input type="radio" id="women" name="gender" value="{{ 'general.subscription_block.name_radio1' | t }}">
            <label for="women">{{ 'general.subscription_block.name_radio1' | t }}</label>
          </div>
          <div>
            <input type="radio" id="men" name="gender" value="{{ 'general.subscription_block.name_radio2' | t }}">
            <label for="men">{{ 'general.subscription_block.name_radio2' | t }}</label>
          </div>
          <div>
            <input type="radio" id="both" name="gender" value="{{ 'general.subscription_block.name_radio3' | t }}">
            <label for="both">{{ 'general.subscription_block.name_radio3' | t }}</label>
          </div>
        </div>
        <div class="subscribe-block__type subscribe-block__radio">
          <input type="checkbox" id="marketing" name="customer[accepts_marketing]" value="false">
          <label for="marketing">{{ 'general.subscription_block.email_marketing' | t }}</label>
        </div>
        <button
          type="submit"
          class="subscribe-block__button"
          id="Subscribe"
          aria-label="{{ 'general.subscription_block.button_label' | t }}"
        >
          {{ 'general.subscription_block.button_label' | t }}
        </button>
      </div>
    {% endif %}
  {% endform %}
</div>
